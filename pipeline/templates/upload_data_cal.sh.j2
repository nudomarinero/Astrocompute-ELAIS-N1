#!/bin/bash
# Copy the important data to a S3 bucket
id=`python /home/ubuntu/astrocompute/pipeline/scripts/get_tag.py data_id`
dataset_name=`python /home/ubuntu/astrocompute/pipeline/scripts/get_tag.py dataset`
calibrator_name=`python /home/ubuntu/astrocompute/pipeline/scripts/get_tag.py cal_name`

# Create bucket
s3cmd mb s3://{{ bucket_name }}
# Upload the logs
s3cmd put /mnt/scratch/data/log/profile.log s3://{{ bucket_name }}/${dataset_name}/logs/${calibrator_name}/
s3cmd put /mnt/scratch/data/log/pipeline* s3://{{ bucket_name }}/${dataset_name}/logs/${calibrator_name}/pipeline/
# Upload the data
s3cmd put /mnt/scratch/data/cal/{{ pipeline_name }}/*.h5 s3://{{ bucket_name }}/${dataset_name}/${calibrator_name}/h5/
s3cmd put /mnt/scratch/data/cal/{{ pipeline_name }}/*.npy s3://{{ bucket_name }}/${dataset_name}/${calibrator_name}/npy/
# Upload the plots
s3cmd put /mnt/scratch/data/cal/{{ pipeline_name }}/*.png s3://{{ bucket_name }}/${dataset_name}/${calibrator_name}/plots/png/
#s3cmd put /mnt/scratch/data/cal/{{ pipeline_name }}/*.pdf s3://{{ bucket_name }}/${dataset_name}/${calibrator_name}/plots/pdf/
s3cmd put /mnt/scratch/data/cal/{{ pipeline_name }}/caldata_transfer_amplitude_array.txt s3://{{ bucket_name }}/${dataset_name}/${calibrator_name}/plots/
